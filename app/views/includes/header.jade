  .navbar.navbar-fixed-top(role='navigation')
    .navbar-inner
      .container
        a.brand(href='/') My boilerplate for logins
        .nav-collapse.collapse
          ul.nav
          ul.nav.pull-right
            li
              a(href="/stream", title="stream") Stream
            if (req.isAuthenticated())
              li
                a(href="/chat/"+req.user.id, title="Profile") Chat
              li
                a(href="/fight/"+req.user.id, title="Profile") Fight
              li
                a(href="/users/"+req.user.id, title="Profile") Profile
              li
                a(href="/logout", title="logout") Logout
            else
              li
                a(href="/login", title="Login") Login
